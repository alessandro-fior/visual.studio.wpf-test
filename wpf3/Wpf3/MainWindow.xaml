<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Lezione 3" Height="350" Width="525">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="8">
                <TextBlock Text="Nome"/>
                <TextBox x:Name="txtNome"  Width="120"  Margin="8,0"/>

            <TextBlock Text="Cognome" />
            <TextBox x:Name="txtCognome" Width="120" Margin="8,0"/>
                
            <Button Click="Button_Click"> Salutami </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="8">
            <TextBlock x:Name="txtSaluto" x:FieldModifier="private"/>
        </StackPanel>
        </StackPanel>
 </Window>
